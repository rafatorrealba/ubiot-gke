  name: fabric-config
  annotations:
    volume.beta.kubernetes.io/storage-class: px-shared-sc
spec:
  accessModes:
   # - ReadOnlyMany
    - ReadWriteMany
  resources:
    requests:
      storage: 1Gi
---

